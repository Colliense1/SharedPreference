<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context=".Activity.SignUp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">


        <EditText
            android:layout_marginTop="50dp"
            android:id="@+id/editText_SName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="FullName"
            android:textColorHint="#5c5959"
            android:textStyle="bold"
            android:textSize="20sp"
            android:maxEms="10"
            android:drawablePadding="12dp"
            android:padding="10dp"
            android:maxLines="1"
            android:drawableLeft="@drawable/ic_person_outline_black_24dp"
            />
        <EditText
            android:id="@+id/editText_Semail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:textStyle="bold"
            android:textSize="20sp"
            android:maxEms="10"
            android:drawablePadding="12dp"
            android:padding="10dp"
            android:maxLines="1"
            android:textColorHint="#5c5959"
            android:drawableLeft="@drawable/ic_mail_outline_black_24dp"
            android:inputType="textEmailAddress"

            />

        <EditText
            android:id="@+id/editText_SPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mobile Number"
            android:textStyle="bold"
            android:textSize="20sp"
            android:maxEms="10"
            android:drawablePadding="12dp"
            android:padding="10dp"
            android:maxLines="1"
            android:textColorHint="#5c5959"
            android:inputType="phone"
            android:drawableLeft="@drawable/ic_stay_primary_portrait_black_24dp"
            />

        <EditText
            android:id="@+id/editText_SPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:textStyle="bold"
            android:textSize="20sp"
            android:maxEms="10"
            android:drawablePadding="12dp"
            android:padding="10dp"
            android:maxLines="1"
            android:textColorHint="#5c5959"
            android:inputType="textPassword"
            android:drawableLeft="@drawable/ic_https_black_24dp"
            />

        <Button
            android:id="@+id/button_SignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign up"
            android:textSize="30dp"
            android:textStyle="bold"
            android:background="@drawable/button_background"
            android:textAllCaps="false"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="80dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="30dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text=""
            android:id="@+id/text_Login"
            android:textColor="#000"
            android:textSize="30dp"
            android:layout_marginRight="60dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

</RelativeLayout>